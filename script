<!DOCTYPE html>
<html>
<body>

<p>Enter a Number and click the button to play Fizz Buzz:</p>

<button onclick="fizzBuzz()">Enter Number</button><input id="numb" placeholder="Fizz Buzz Game">

<p id="round"></p>

<script>
function fizzBuzz() {
num = document.getElementById("numb").value;
  var x = 3;
  var y = 5;
  var answer;
  if(num = "Fizz Buzz Game"){
    answer = "Enter a Number";
  }
  else if (num % x == 0 && num % y == 0) {
    answer = "Fizz Buzz";
  } 
  else if(num % x == 0){
    answer = "Fizz";
  }
  else if(num % y == 0){
    answer = "Buzz";
  }
  else{
    answer = num;
  }
  document.getElementById("round").innerHTML = answer;
}
</script>

</body>
</html>
